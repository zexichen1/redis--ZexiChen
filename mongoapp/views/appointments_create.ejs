<!doctype html>
<html>
  <head>
    <title>Create Appointment</title>
    <%- include('./partials/css.ejs') %>
  </head>
  <body>
    <div class="container">
      <%- include("./partials/navBar.ejs") %>
      <h1>Create Appointment</h1>
      <%- include("./partials/errMsg.ejs") %>

      <form action="/appointments/create" method="POST">
        <div class="mb-3">
          <label class="form-label">
            Car ID
            <input
              type="text"
              name="CarID"
              class="form-control"
            />
          </label>
        </div>
        <div class="mb-3">
          <label class="form-label">
            Year
            <input
              type="text"
              name="Year"
              class="form-control"
            />
          </label>
        </div>
        <div class="mb-3">
          <label class="form-label">
            Model
            <input
              type="text"
              name="Model"
              class="form-control"
            />
          </label>
        </div>
        <div>
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
      <p>AppointmentID will be generated by the database automatically.</p>
      
      

      <%- include("./partials/footer.ejs") %>
    </div>
    <!-- /.container -->
  </body>
</html>
